{
	"name": "dojo.tip",
	"version": "1.0.0",
	"scripts": {
		"start": "dojo build --mode dev --watch --serve --dojorc .dojorc.dev",
		"dev": "dojo build --mode dev --watch --serve --dojorc .dojorc.dev",
		"build": "dojo build --mode dist",
		"build:dev": "dojo build --mode dev",
		"prettier": "prettier --write \"{content,src,tests}/**/*.{ts,tsx,md}\"",
		"test": "dojo test",
		"test:unit": "dojo build --mode unit && dojo test --unit --config local",
		"test:functional": "dojo build --mode functional && dojo test --functional --config local",
		"test:all": "dojo build --mode unit && dojo build --mode functional && dojo test --all --config local"
	},
	"dependencies": {
		"@dojo/framework": "next",
		"tslib": "1.11.1"
	},
	"devDependencies": {
		"@dojo/cli": "next",
		"@dojo/cli-build-app": "next",
		"@dojo/cli-test-intern": "next",
		"@mapbox/rehype-prism": "0.4.0",
		"@types/node": "~9.6.5",
		"canonical-path": "1.0.0",
		"cldrjs": "0.5.1",
		"fs-extra": "9.0.0",
		"glob": "7.1.6",
		"hast-to-hyperscript": "8.0.0",
		"prettier": "2.0.5",
		"rehype-slug": "3.0.0",
		"remark-external-links": "6.0.0",
		"remark-frontmatter": "1.3.3",
		"remark-parse": "8.0.0",
		"remark-parse-yaml": "0.0.3",
		"remark-rehype": "6.0.0",
		"typescript": "3.8.3",
		"unified": "9.0.0"
	},
	"prettier": {
		"singleQuote": true,
		"tabWidth": 4,
		"useTabs": true,
		"printWidth": 120,
		"arrowParens": "always"
	}
}
